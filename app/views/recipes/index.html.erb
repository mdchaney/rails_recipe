<section class="jumbotron jumbotron-fluid text-center">
  <div class="container py-5">
    <h1 class="display-4">Recipes for every occasion</h1>
    <p class="lead text-muted">
      We’ve pulled together our most popular recipes, our latest
      additions, and our editor’s picks, so there’s sure to be something
      tempting for you to try.
    </p>
  </div>
</section>
<div class="py-5">
  <main class="container">
    <div class="text-end mb-3">
      <%= link_to 'Create New Recipe', new_recipe_path, class: 'btn custom-button' %>
    </div>
    <div class="row">
      <% if @recipes.any? -%>
        <%= render partial: 'idx_recipe', collection: @recipes %>
      <% else -%>
        <div class="vw-100 vh-50 d-flex align-items-center justify-content-center">
          <h4>
            No recipes yet. Why not
            <%= link_to 'create one', new_recipe_path %>
          </h4>
        </div>
      <% end -%>
    </div>
    <%= link_to 'Home', root_path, class: 'btn btn-link' %>
  </main>
</div>
